{
  "name": "resolid-website",
  "private": true,
  "description": "The Resolid Website.",
  "homepage": "https://www.resolid.tech",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resolid/framework.git",
    "directory": "website"
  },
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "lint": "eslint .",
    "start:site": "NODE_ENV=production SERVER_PORT=3001 node --env-file=.env ./build/server/site/server.mjs",
    "start:admin": "NODE_ENV=production SERVER_PORT=3002 SERVE_PATH=/admin node --env-file=.env ./build/server/admin/server.mjs",
    "typecheck": "react-router typegen && tsc --noEmit",
    "typegen": "react-router typegen"
  },
  "dependencies": {
    "@react-router/node": "^7.12.0",
    "@resolid/app-db-mysql": "workspace:^",
    "@resolid/app-log": "workspace:^",
    "@resolid/app-log-file": "workspace:^",
    "@resolid/core": "workspace:^",
    "@resolid/react-ui": "https://pkg.pr.new/resolid/react-ui/@resolid/react-ui@16cfb7c",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/analytics": "^1.6.1",
    "@vercel/functions": "^3.3.5",
    "@vercel/speed-insights": "^1.3.1",
    "isbot": "^5.1.32",
    "mysql2": "^3.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@netlify/types": "^2.3.0",
    "@resolid/dev": "workspace:^",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "vite": "^7.3.1",
    "vite-plugin-inspect": "^11.3.3",
    "vite-tsconfig-paths": "^6.0.4"
  },
  "engines": {
    "node": "^22.13.0 || >=24"
  }
}
