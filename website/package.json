    "@resolid/core": "workspace:^",
    "@resolid/react-ui": "^0.1.8",
    "@resolid/utils": "^1.2.7",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/analytics": "^1.6.1",
    "@vercel/functions": "^3.4.3",
    "@vercel/speed-insights": "^1.3.1",
    "isbot": "^5.1.35",
